{
  "description": "Vibe Check secret scanner - prevents secrets from being written to .vibe-check/ files",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/scripts/scan-secrets.js\"",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
